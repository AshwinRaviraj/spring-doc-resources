<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>resources</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/resources/html</directory>
      <outputDirectory>html</outputDirectory>
      <includes>
        <include>*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources/stylesheets</directory>
      <outputDirectory>stylesheets</outputDirectory>
      <includes>
        <include>*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources/javascript/tocbot-3.0.2</directory>
      <outputDirectory>javascript/tocbot-3.0.2</outputDirectory>
      <includes>
        <include>*.*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>README.md</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>
</assembly>
